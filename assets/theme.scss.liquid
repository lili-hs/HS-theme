  .main-col.right { float:right; }

  .catBanners { margin-bottom:25px;
    .slideshow > .slideshow__slide:not(:first-child){ display:none; }
    img { width:100%; }
  }

  .collection-banner { position:relative; background-position:50% 50%; background-repeat:no-repeat; background-size:cover;

    .block-ttl { position:absolute; top:50%; left:50%; @include transform(translate(-50%,-50%)); text-align:center;
      .collection-title { font-size:{{settings.cl_bnr_title}}px; text-transform:uppercase; font-weight:700; margin-bottom:0;}
      .collection-description { margin-top:15px; font-size:{{settings.cl_bnr_des}}px;}
    }

    &.info-over &.with-image {  background-position:50% 50%; background-size:cover; background-repeat:no-repeat;}

    &.content-side { margin-bottom:20px;
      &.info-over .text-left { width:100%; padding:40px 50px;}
      &.info-below { height:auto;
        .block-ttl {position:static; transform:none; }
        .collection-image {margin-bottom:30px;}
       }
    }
  }
   .collection-description.top { margin-bottom:30px; }
}

// Sidebar
.sidebar { margin-top:0; @include transition(all 0.4s ease-in-out);
  .closeFilter { color:#fff; font-size:16px; line-height:29px; height:30px; width:30px; text-align:center; visibility:hidden;
     cursor:pointer; position:fixed; top:15px; left:-30px; background-color:#000; @include transition(all 0.4s ease-in-out);
  }
  .sidebar-products-slider {
    .grid-view-item {margin-bottom:0;}
  }
  .sidebar-products  {
      li { padding-bottom:10px; }
      .grid-view-item__link { float:left; margin-right:10px;  }
      .product-price__price {display:block;}
  }
  .widget-title { color:{{settings.sidebar_ttls}}; font-size:15px; margin-bottom:10px; font-weight:700; letter-spacing:0.2px; position:relative; }
  .widget-content { padding:0; margin-bottom:30px; }

  .sidebar_widget { margin-bottom:10px; clear:both; }

    .categories ul.sidebar_cate {
      .grid__item { float:none; }
      li { padding:4px 0; }
      a { color:{{settings.sidebar_links}};
        &:hover { color:{{settings.sidebar_links_hv}}; }
      }
      ul { margin:0 0 0 15px; }
    }
    .static-banner { border:0 none; margin-bottom:35px; }

    .filterBox {
      	input[type=checkbox] { display:none; }
      	ul.twoCall { column-count:2; column-gap:12px; }
        ul:not(.filter-color) {
         li { padding:3px 0;
           label { font-weight:400; font-size:12px; }
         }

        input + label{ display:inline-block; line-height:1.5em; }
        input + label > span { display:inline-block; width:16px; height:16px; margin:0.25em 0.5em 0.25em 0.25em; border:1px solid #d0d0d0; vertical-align:bottom; }
        input:checked + label > span { border:1px solid #000;}
        input:checked + label > span:before { content:'\ea7f'; display:block; width:15px; color:#fff; background-color:#000; font-size:10px; line-height:15px; text-align:center; font-family:"adorn-icons"; }
      }

      .filter-color {
        .tooltip-label {  top:-25px; left:50%; transform: translateX(-50%);
        	&:before { border-top:7px solid #000; bottom:-9px; left:50%; margin-left:-5px;}
        }
        li { display:inline-block; padding:0; margin:0 5px 5px 0; position:relative;
            label.color { margin:0; border-radius:0;
                 span.clrbox { display:block; height:18px; width:18px; border-radius:0;
                   &.rounded {border-radius:50%;}
                   &.rounded_rectangle {border-radius:4px;}
                   &.medium{ height:30px; width:30px;}
                   &.large{height:40px; width:40px;}
                   &.swtwhite  {border:1px solid #eee;}
            	}
            }
            input:checked + label.color span {
                &.clrbox:before { margin-left:3px; content:'\ea7f'; position:absolute; color:#fff; font-size:11px; font-family:"adorn-icons"; }
              	&.medium:before { margin:4px 0 0 8px; font-size:13px; }
              	&.large:before { margin:8px 0 0 12px; font-size:14px; }
              	&.swtwhite:before { color:#000; }
             }
          &:hover .tooltip-label { opacity:1; visibility:visible;}
        }
      }
    }

  .crFilters  {
    .actFilter { cursor:pointer; display: inline-block;margin: 0 3px 0 0;padding: 3px 6px;background: #000;color: #fff;font-size: 11px;
      .ad { font-size:11px; vertical-align:baseline; padding-left:5px;}
    }
    .btn-link {display:inline-block; margin-top:10px; font-size:11px; text-decoration:underline;}
  }
  &.popup { width:300px; height:100%; padding:15px; position:fixed; top:0; left:-310px; z-index:335;
    overflow:auto; background-color:#fff; box-shadow:0 0 5px rgba(0,0,0,0.3);
    &.active { left:0;
      .closeFilter {  visibility:visible; left:300px; }
    }
  }
  @include media-query($medium-down) {
	&.popup,
    &.filterbar { width:250px; height:100%; padding:0; position:fixed; top:0; left:-260px; z-index:444;
    	overflow:visible; background-color:#fff; box-shadow:0 0 5px rgba(0,0,0,0.3);
        &.active { left:0;
          .closeFilter {  visibility:visible; left:250px; }
        }
      .sidebar_tags  {overflow:scroll; height:100%;}
      .sidebar_widget { padding:10px 10px 0 10px;}
    }

  }
}
